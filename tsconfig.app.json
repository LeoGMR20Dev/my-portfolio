{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Config for paths */
    "baseUrl": "./",
    "paths": {
      "src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@assets": ["./src/assets"],
      "@components/*": ["./src/components/*"],
      "@components": ["./src/components"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"],
      "@contexts/*": ["./src/contexts/*"],
      "@contexts": ["./src/contexts"],
      "@styles/*": ["./src/styles/*"],
      "@styles": ["./src/styles"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@routes/*": ["./src/routes/*"],
      "@routes": ["./src/routes"],
      "@utils/*": ["./src/utils/*"],
      "@utils": ["./src/utils"],
      "@hooks/*": ["./src/hooks/*"],
      "@hooks": ["./src/hooks"],
      "@pages/*": ["./src/pages/*"],
      "@pages": ["./src/pages"],
      "@reducers/*": ["./src/reducers/*"],
      "@reducers": ["./src/reducers"]
    }
  },
  "include": ["src"]
}
